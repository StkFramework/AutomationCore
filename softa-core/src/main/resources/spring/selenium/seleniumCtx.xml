<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
       	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
       	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
        
   
	<bean id ="cucumberCommonUIStepsAdapter"  class="com.softtek.automation.steps.cucumber.CucumberCommonUIStepsAdapter" primary="true">
		<property name="UIActions" ref="UIActions" />	
		<property name="UIElementFactory" ref="UIElementFactory" />		
	</bean>	
	

	
	<bean id ="UIElementFactory"  class="com.softtek.automation.element.BasicUIElementFactory">
		<property name="viewsSource" ref="viewSourcesPath" />						
	</bean>
	
	<bean id ="UIActions"  class="com.softtek.automation.actions.selenium.SeleniumUIActions" >	
		<property name="testDriver" ref="testDriver" />	
		<property name="UIElementsVerification" ref="UIElementsVerification"/>	
		<property name="executionContext" ref="ExecutionContext"/>
		<property name="expressionParserAdapter" ref="expressionParserAdapter"/>						
	</bean>
	
			
	<bean id ="expressionParserAdapter"  class="com.softtek.automation.ExpressionParserAdapter" scope="singleton"></bean>	
	
	<bean id ="testDriver"  class="com.softtek.automation.driver.selenium.SeleniumDriver" scope="singleton">	
		<property name="properties">
			<props>
				<prop key="driverType">${driverType}</prop>
				<prop key="browser">${browser}</prop>			
			</props>
		</property>				
	</bean>	
	
	<bean id ="cucumberCommonAppStepsAdapter"  class="com.softtek.automation.steps.cucumber.CucumberCommonAppStepsAdapter" primary="true">
		<property name="AppActions" ref="AppActions" />
		<property name="ExecutionContext" ref="ExecutionContext" />		
	</bean>
	
	<bean id ="AppActions"  class="com.softtek.automation.actions.selenium.SeleniumAppActions" autowire="byName">
		<property name="testDriver" ref="testDriver" />
		<property name="applicationsSet" ref="applicationsSet" />		
	</bean>
	
	<bean id ="UIElementsVerification"  class="com.softtek.automation.uiverifications.SeleniumUIElementsVerifications" autowire="byName">
		<property name="testDriver" ref="testDriver" />
		<property name="viewsSource" ref="viewSourcesPath" />		
	</bean>	
	
</beans>